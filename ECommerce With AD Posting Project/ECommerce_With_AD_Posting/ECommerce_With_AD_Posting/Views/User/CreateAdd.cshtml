

@model ECommerce_With_AD_Posting.Models.tbl_product
@{
    ViewBag.Title = "post_ad";
    Layout = "~/Views/Shared/_Layout - 2.cshtml";
}

<h2 class="text-primary">post your ad</h2>
<h1 class="text-danger">@Session["u_name"]</h1>
<br />

@using (Html.BeginForm("CreateAdd", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.DropDownListFor(x => x.u_id_fk, ViewBag.cat_list as SelectList, "select ad category", new { @class = "form-control" })
    <br />
    @Html.TextBoxFor(x => x.pro_name, new { @class = "form-control", @placeholder = "enter product name" })
    <br />
    @Html.TextBoxFor(x => x.pro_price, new { @class = "form-control", @placeholder = "enter product price" })
    <br />
    @Html.TextBoxFor(x => x.pro_desc, new { @class = "form-control", @placeholder = "enter product description" })
    <br />
    <input type="file" id="img" name="img" class="input" value="upload image" />
    <br />
    <input type="submit" class="btn btn-danger" />




}


