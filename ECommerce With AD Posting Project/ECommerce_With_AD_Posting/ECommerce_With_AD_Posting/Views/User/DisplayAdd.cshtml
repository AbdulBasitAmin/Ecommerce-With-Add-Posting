
using PagedList.Mvc;
@model PagedList.IPagedList<ECommerce_With_AD_Posting.Models.tbl_product>
@{
    ViewBag.Title = "DisplayAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DisplayAdd</h2>

<div class="row">
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-4" style="height:250px; margin-top:120px;">

                <img src="@Url.Content(item.pro_image)" style="width:100%; height:100%;" />

                <h3 style="text-align:center;">@item.pro_name</h3>
                <h4 style="text-align:center;">@item.pro_price</h4>

            </div>
        }

    }
</div>