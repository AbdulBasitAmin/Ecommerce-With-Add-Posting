@model ECommerce_With_AD_Posting.Models.tbl_user
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /><br><br /><br /><br />
<h2>Student Register</h2><br />

@using (Html.BeginForm("Register", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <form action="">

        <div class="form-group">

            <label for="email"><b>User Name</b></label><br />
            @Html.TextBoxFor(x => x.u_name, new { @class = "form-control", @placeholder = "Enter Name" })


        </div>


        <div class="form-group">
            <label for="psw"><b>Email</b></label><br>
            @Html.TextBoxFor(x => x.u_email, new { @class = "form-control", @placeholder = "Enter Email" })

        </div>


        <div class="form-group">

            <label for="email"><b>Password</b></label><br />
            @Html.PasswordFor(x => x.u_password, new { @class = "form-control", @placeholder = "Password" })


        </div>

        <div class="form-group">

            <label for="email"><b>Contact</b></label><br />
            @Html.TextBoxFor(x => x.u_contact, new { @class = "form-control", @placeholder = "Contact" })


        </div>



        <div class="form-group">

            <label for="email"><b>Upload Image</b></label><br />
            <input type="file" id="imgfile" name="imgfile" value="add" />


        </div>


        <div class="form-group">

            <h5 style="color:red;">@ViewBag.error</h5>

        </div>


        <input type="submit" value="Add" class="btn btn-success" />



    </form>
}