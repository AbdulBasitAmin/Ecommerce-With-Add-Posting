@model ECommerce_With_AD_Posting.Models.tbl_admin
@{
    ViewBag.Title = "Signup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /><br><br /><br /><br />
<h2>Admin Signup</h2><br />


@using (Html.BeginForm())
{

    <form action="">

            <div class="form-group">

                <label for="email"><b>Name</b></label><br />
                @Html.TextBoxFor(x => x.ad_name, new { @class = "form-control", @placeholder = "Enter Name" })
               

            </div>
            

            <div class="form-group">
                <label for="psw"><b>Password</b></label><br>
                @Html.PasswordFor(x => x.ad_password, new { @class = "form-control", @placeholder = "Enter Password" })
               
            </div>


            <div class="form-group">

                <label for="email"><b>Email</b></label><br />
                @Html.TextBoxFor(x => x.ad_email, new { @class = "form-control", @placeholder = "Enter Email" })
              

            </div>


            <div class="form-group">

                <h5 style="color:red;">@ViewBag.error</h5>

            </div>


            <input type="submit" value="Create" class="btn btn-success" />
        

    
    </form>
}